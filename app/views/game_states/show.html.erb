<div class="space-y-10 divide-y divide-gray-900/10 m-10">
  <div class="grid grid-cols-1 gap-x-8 gap-y-8 md:grid-cols-4">
    <div class="px-4 sm:px-0 flex justify-start items-end flex-col md:col-span-1">
      <%= link_to game_states_path, class: "inline-block self-start" do  %>
        <p class="flex gap-3 justify-center rounded-md bg-gray-900 px-3 py-1.5 text-sm/6 font-semibold text-white shadow-sm hover:bg-gray-700 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-gray-900">
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="size-6">
            <path fill-rule="evenodd" d="M12 2.25c-5.385 0-9.75 4.365-9.75 9.75s4.365 9.75 9.75 9.75 9.75-4.365 9.75-9.75S17.385 2.25 12 2.25Zm-4.28 9.22a.75.75 0 0 0 0 1.06l3 3a.75.75 0 1 0 1.06-1.06l-1.72-1.72h5.69a.75.75 0 0 0 0-1.5h-5.69l1.72-1.72a.75.75 0 0 0-1.06-1.06l-3 3Z" clip-rule="evenodd" />
          </svg>
          Back
        </p>
      <% end %>
      <h2 class="text-base/7 font-semibold text-gray-900">Game State: Generation <%= @game_state.generation %></h2>
      <p class="mt-1 text-sm/6 text-gray-600">Population: <%= @game_state.alived_cells %></p>
      <p class="mt-1 text-sm/6 text-gray-600">Keep an eye on those cells! They might just start a revolution.</p>
      <div class="flex mt-4 gap-5">
        <%= button_to game_state_path(@game_state), method: :delete, class: "inline-block" do  %>
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="size-5">
            <path fill-rule="evenodd" d="M16.5 4.478v.227a48.816 48.816 0 0 1 3.878.512.75.75 0 1 1-.256 1.478l-.209-.035-1.005 13.07a3 3 0 0 1-2.991 2.77H8.084a3 3 0 0 1-2.991-2.77L4.087 6.66l-.209.035a.75.75 0 0 1-.256-1.478A48.567 48.567 0 0 1 7.5 4.705v-.227c0-1.564 1.213-2.9 2.816-2.951a52.662 52.662 0 0 1 3.369 0c1.603.051 2.815 1.387 2.815 2.951Zm-6.136-1.452a51.196 51.196 0 0 1 3.273 0C14.39 3.05 15 3.684 15 4.478v.113a49.488 49.488 0 0 0-6 0v-.113c0-.794.609-1.428 1.364-1.452Zm-.355 5.945a.75.75 0 1 0-1.5.058l.347 9a.75.75 0 1 0 1.499-.058l-.346-9Zm5.48.058a.75.75 0 1 0-1.498-.058l-.347 9a.75.75 0 0 0 1.5.058l.345-9Z" clip-rule="evenodd" />
          </svg>
        <% end %>

        <%= button_to reset_to_initial_game_state_path(@game_state), method: :patch, class: "inline-block" do %>
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="size-6">
            <path fill-rule="evenodd" d="M9.53 2.47a.75.75 0 0 1 0 1.06L4.81 8.25H15a6.75 6.75 0 0 1 0 13.5h-3a.75.75 0 0 1 0-1.5h3a5.25 5.25 0 1 0 0-10.5H4.81l4.72 4.72a.75.75 0 1 1-1.06 1.06l-6-6a.75.75 0 0 1 0-1.06l6-6a.75.75 0 0 1 1.06 0Z" clip-rule="evenodd" />
          </svg>
        <% end %>

        <%= button_to next_generation_game_state_path(@game_state), method: :patch, class: "inline-block" do %>
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="size-6">
            <path d="M5.055 7.06C3.805 6.347 2.25 7.25 2.25 8.69v8.122c0 1.44 1.555 2.343 2.805 1.628L12 14.471v2.34c0 1.44 1.555 2.343 2.805 1.628l7.108-4.061c1.26-.72 1.26-2.536 0-3.256l-7.108-4.061C13.555 6.346 12 7.249 12 8.689v2.34L5.055 7.061Z" />
          </svg>
        <% end %>
      </div>
    </div>
    <div class="bg-white shadow-sm ring-1 ring-gray-900/5 sm:rounded-xl md:col-span-3 p-10">
      <!-- Mensagem para telas pequenas -->
      <div class="block md:hidden text-center text-red-500 mb-4 landscape:hidden">
        Please rotate your device for a better viewing experience.
      </div>
      <div class="grid gap-1 bg-black p-2 rounded-lg" style="grid-template-columns: repeat(<%= @game_state.cols %>, minmax(0, 1fr)); grid-template-rows: repeat(<%= @game_state.rows %>, minmax(0, 1fr));">
        <% @game_state.state.each do |row| %>
          <% row.each do |cell| %>
            <div class="<%= cell == '*' ? 'bg-white' : 'bg-black' %> w-6 h-6 border border-gray-700"></div>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>
